# Simple 0 ~ 5

for x in range(5):
    print("hello")


# How x works

for x in range(10): #Range always start from 0
										#Maximum number is 9 here
    print("x = ",x,"\n")


# 5 ~ 10

for x in range(5,10):
    print("x = ",x,"\n")


# Increment of 2

for x in range(0 , 10 , 2): #third parameter is of step or increment
    print("x = ",x,"\n")

# Backward

for x in range(10 , 0 , -1): #third parameter is of step or increment
    print("x = ",x,"\n")
